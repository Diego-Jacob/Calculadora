<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Visor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Apagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Visor1" />

    <Button
        android:id="@+id/Apagar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="APAGAR"
        app:layout_constraintBottom_toTopOf="@+id/Sete"
        app:layout_constraintEnd_toStartOf="@+id/Percent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Visor2" />

    <TextView
        android:id="@+id/Visor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Visor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="@+id/Apagar"
        app:layout_constraintEnd_toStartOf="@+id/Div"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/Apagar"
        app:layout_constraintTop_toTopOf="@+id/Apagar" />

    <Button
        android:id="@+id/Div"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/Apagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/Percent"
        app:layout_constraintTop_toTopOf="@+id/Apagar" />

    <Button
        android:id="@+id/Sete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Oito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apagar" />

    <Button
        android:id="@+id/Oito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/Sete"
        app:layout_constraintEnd_toStartOf="@+id/Nove"
        app:layout_constraintStart_toEndOf="@+id/Sete"
        app:layout_constraintTop_toTopOf="@+id/Sete" />

    <Button
        android:id="@+id/Nove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/Sete"
        app:layout_constraintEnd_toStartOf="@+id/Mult"
        app:layout_constraintStart_toEndOf="@+id/Oito"
        app:layout_constraintTop_toTopOf="@+id/Sete" />

    <Button
        android:id="@+id/Mult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="@+id/Sete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Nove"
        app:layout_constraintTop_toTopOf="@+id/Sete" />

</androidx.constraintlayout.widget.ConstraintLayout>